<li class = "list-group-item row activity">
  <div class = "timeline-icon create-activity">
    <i class = "glyphicon glyphicon-plus"></i>
  </div>
  <div class = "timeline-time">
    <small class = "text-muted">
      <%= l activity.created_at, format: :date_month_year_v1 %>
    </small><br/>
  </div>
  <div class = "timeline-content content">
    <strong>
      <%= activity.user ? activity.user.name : "ss" %>
    </strong><br/>
    <% if activity.trackable %>
      <span class = "action-activity">
        <%= t("dashboard.activity.user.create") + activity.trackable.title %>
      </span>
    <% else %>
      <span class = "action-activity">
        aa
      </span>
    <% end %>
  </div>
</li>
