<li>
  <div class="row col-md-12" style=" padding-bottom: 5px;
    padding-top: 5px; padding-right: 20px;border-bottom: solid 1px #a79f9f;">
    <div class="col-md-1">
      <%= image_tag post.user.avatar.url,
        style: "width: 60px; height: 60px;", class: "img-circle" %>
    </div>
    <div class="col-md-8">
      <div><b style="color: #5488c7"><%= link_to post.title, members_user_post_path(@user, post) %></b></div>
      <div>
        Date: <%= l post.created_at, format: :date_month_year_v1 %>
      </div>
      <div style="color: #9b9b9b">
        <i class="fa fa-eye"></i> 72 &nbsp;&nbsp;&nbsp;
        <i class="fa fa-comment"></i> 72
      </div>
      <div class="btn-group-sm">
        <%= link_to edit_members_user_post_path(@user, post), class: "btn btn-info" do %>
          Edit
        <% end %>
        <%= link_to members_user_post_path(@user, post),
          method: :delete, class: "btn btn-default", data: {confirm: "Bạn có chắc chắn muốn xóa không?"} do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</li>
