<% if @question.present? %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Chi tiết câu hỏi</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <table class="table margin-bottom-0">
          <tbody>
            <tr>
              <td>Câu hỏi</td>
              <td colspan="2"><%= @question.name %></td>
            </tr>

            <% if @question.answers.present? %>
              <% @question.answers.each_with_index do |answer, index| %>
                <tr>
                  <td>Đáp án <%= index + 1 %></td>
                  <td><%= answer.name %></td>
                  <td><%= t("answers.#{answer.is_correct?}_") %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  Lỗi không tìm thấy
<% end %>
