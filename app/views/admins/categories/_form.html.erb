<div class="panel panel-info">
  <div class="panel-heading">
    <center><h3 class="panel-title"><%= yield(:title) %></h3></center>
  </div>
  <div class="panel-body">
    <div class="container form-horizontal">
      <%= form_for [:admins, @category] do |f| %>
        <div class="form-group">
          <div class="col-md-offset-3">
            <%= render "shared/error_messages", object: f.object %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name, value: "Tên danh mục", class: "col-md-3 control-label" %>
          <div class="col-md-5">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, value: "Mô tả", class: "col-md-3  control-label" %>
          <div class="col-md-5">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>

        <%= f.fields_for :types do |ff| %>
          <div class="clear-fix types-form">
            <div class="form-group">
              <%= ff.label :name, value: "Loại", class: "col-md-3 control-label" %>
              <div class="col-md-5">
                <%= ff.text_field :name, class: "form-control" %>
              </div>
              <div class="col-md-4 remove-answer">
                <%= link_to_remove_fields_type "Xóa", ff %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="clear-fix form-group add-type row">
          <div class="col-md-offset-2">
            <%= link_to_add_fields "Thêm", f, :types,
              class: "btn btn-sm btn-primary fa fa-plus" %>
          </div>
        </div>

        <div class="form-group" >
          <div class="col-md-5 col-md-offset-3">
            <%= f.submit yield(:button_text),
              class: "btn btn-primary form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
