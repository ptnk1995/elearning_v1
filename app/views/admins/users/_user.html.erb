<tr>
  <td>
    <%= current_index @users.current_page, Settings.per_page.admins.user,
      user_counter %>
  </td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.number_of_phone %></td>
  <td><%= t "user.role.#{user.role}" %></td>
  <td >
    <div class="btn-group btn-group-xs">
      <%= link_to admins_user_path(user), class: "btn btn-default" do %>
        <i class="fa fa-eye"></i>
      <% end %>
      <%= link_to edit_admins_user_path(user), class: "btn btn-warning" do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to admins_user_path(user),
        method: :delete, class: "btn btn-danger", data: {confirm: "Bạn có chắc chắn muốn xóa không?"} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
